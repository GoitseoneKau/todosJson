{
  "compilerOptions": {
    "target": "es6",
    "module":"NodeNext",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node16"
  },
  "include": ["src/*.ts","src/**/*.ts","src/***/**/*.ts"],
  "exclude": ["node_modules"]
}