{
  "compilerOptions": {
    "target": "ESNext",
    "module":"NodeNext",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
  },
  "include": ["*.ts","**/*.ts","*.ts,src/*.ts","src/**/*.ts","src/***/**/*.ts"],
  "exclude": ["node_modules"]
}