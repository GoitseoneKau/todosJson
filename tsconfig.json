{
  "compilerOptions": {
    "target": "es6",
    "module":"NodeNext",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node16",
  },
  "include": ["public/*.html","**/*.ts","*.ts,src/*.ts","src/**/*.ts","src/***/**/*.ts"],
  "exclude": ["node_modules"]
}